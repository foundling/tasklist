<ul class="task-list">

    <li class="task-list-title {{#is open 'true'}}expanded{{/is}}">

        <i can-click="toggleOpen" class="toggle-list-expand fa fa-arrow-down"></i>
        <input 
            value="{{ title }}" 
            class="task-list-title-input {{#editing}}editing{{/editing}}"
            can-click="editTitle ."
            can-blur="commitTitle ."
            can-enter="commitTitle ."
            can-value="title"
            {{#unless editing}}readonly{{/unless}} />
        <i can-click="removeList %index" class="remove-list fa fa-trash"></i>

    </li>

    {{#if open}}
    <div class="task-list-wrapper">
        <i can-click="addTask" class="add-task fa fa-plus"></i>
        <content>
    </div>
    {{/is}}

</ul>
