<ul class="task-list">

    <li 
        class="task-list-title 
               {{#isActive}}active{{/isActive}} 
               {{#is open 'true'}}expanded{{/is}}">
        <i can-click="toggleOpen" class="fa fa-arrow-down"></i>
        <input 
            can-dblclick="editTitle ."
            can-blur="commitTitle ."
            can-enter="commitTitle ."
            can-value="title"
            value="{{ title }}" 
            class="{{#editing}}editing{{/editing}}"
            {{#unless editing}}readonly{{/unless}}/>
        <i can-click="removeTaskList ." class="fa fa-trash"></i>
    </li>

    <!-- this is not great, could be just '#is open' -->
    {{#is open 'true'}}
    <div class="task-list-wrapper">
        <content/>
    </div>
    {{/is}}

</ul>
